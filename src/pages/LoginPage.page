<apex:page controller="LoginController">
    <apex:form >
        <apex:pageBlock >
            <apex:pageMessages />
            <apex:pageBlockSection >
                <apex:inputText value="{!loginHelper.user}"/>
                <apex:inputSecret value="{!loginHelper.password}"/>
            </apex:pageBlockSection>
            <apex:pageBlockButtons location="bottom">
                <apex:commandButton value="Login" action="{!login}"/>
                <apex:commandButton value="Logout" action="{!logout}"/>
            </apex:pageBlockButtons>
        </apex:pageBlock>
    </apex:form>
</apex:page>